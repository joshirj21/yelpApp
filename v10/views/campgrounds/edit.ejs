<% include ../partials/header %>
<h1 class="text-center mb-4">Edit <%=campground.name%></h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <!-- <label for="exampleInputEmail1">Enter Name</label> -->
                    <input type="text" name="name" class="form-control" placeholder="Name"
                        value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <!-- <label for="exampleInputPassword1">Password</label> -->
                    <input type="text" name="image" class="form-control" placeholder="URL"
                        value="<%=campground.image%>">
                </div>
                <div class="form-group">
                    <!-- <label for="exampleInputPassword1">Password</label> -->
                    <input type="text" name="description" class="form-control" value="<%=campground.description%>">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
                <a href="/campgrounds">Go back to campgrounds</a>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>