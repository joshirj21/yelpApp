<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-large btn-primary" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>
    </header>


    <div class="row">
        <% for(var i=0;i<campgrounds.length;i++){ %>
        <div class="col-md-4 col-sm-6 col-lg-3 mb-3">
            <div class="img-thumbnail">
                <img class="img-fluid" src="<%= campgrounds[i].image %>" alt="camps">
                <div class="caption text-center">
                    <h5> <%= campgrounds[i].name %> </h5>
                    <div>
                        <a class="btn btn-small btn-primary" href="campgrounds/<%= campgrounds[i]._id %>">More info</a>
                    </div>
                </div>
            </div>
        </div> <% } %> </div>
</div> <!-- <p><%= campgrounds.length %></p> -->


<% include ../partials/footer %>